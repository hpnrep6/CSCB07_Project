<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".ViewEventsEventFragment" >

    <TextView
        android:id="@+id/viewEventsEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name" />

    <TextView
        android:id="@+id/viewEventsEventSport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sport" />

    <TextView
        android:id="@+id/viewEventsEventVenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Venue" />

    <TextView
        android:id="@+id/viewEventsEventOccupancy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/12" />

    <Button
        android:id="@+id/viewEventsEventEnrol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join this Event" />

    <TextView
        android:id="@+id/viewEventsEventID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="0sp"/>
</LinearLayout>