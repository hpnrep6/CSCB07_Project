<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/homeViewVenues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Venues" />

        <Button
            android:id="@+id/homeAddVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Venue" />

        <Button
            android:id="@+id/homeViewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Events" />

        <Button
            android:id="@+id/homeMyEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Events"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/homeViewBySport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Event By Sport" />

        <Button
            android:id="@+id/homeMyProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Profile" />

        <Button
            android:id="@+id/homeLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>