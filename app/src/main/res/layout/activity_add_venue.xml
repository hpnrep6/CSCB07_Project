<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVenue"
    android:background="@drawable/gradient_bkg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/venue_name"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/addVenueName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_input_box"
                android:ems="10"
                android:hint="Name"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#9DC9FF" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/venue_location"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/addVenueLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_input_box"
                android:ems="10"
                android:hint="Location"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#9DC9FF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/venue_description"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/addVenueDescription"
                android:layout_width="match_parent"
                android:layout_height="328dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_input_box"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#9DC9FF" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sports Offered (Press enter to add sport)"
                android:textColor="@color/white"
                android:textSize="17dp"/>

            <LinearLayout
                android:id="@+id/addVenueSportsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <EditText
                android:id="@+id/addVenueSportField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addVenueBackButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="Back" />

                <Button
                    android:id="@+id/addVenueAddButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Add Venue" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>