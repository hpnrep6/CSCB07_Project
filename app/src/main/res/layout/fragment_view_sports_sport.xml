<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ViewSportsSportFragment" >

    <TextView
        android:id="@+id/viewSportSportName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sport Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/viewSportSportSearchVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Venues" />

        <Button
            android:id="@+id/viewSportSportSearchEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Find Events" />
    </LinearLayout>

</LinearLayout>